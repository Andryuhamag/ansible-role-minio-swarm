version: '3.7'

# Settings and configurations that are common for all containers
x-minio-common: &minio-common
  image: quay.io/minio/minio:RELEASE.2023-03-13T19-46-17Z
  command: server --console-address ":9001" http://minio{1...{{ minio_service_count }}}/data{1...{{ minio_service_volume_count }}}
  expose:
    - "9000"
    - "9001"
  environment:
    MINIO_ROOT_USER: minioadmin
    MINIO_ROOT_PASSWORD: minioadmin
  healthcheck:
    test: ["CMD", "curl", "-f", "http://localhost:9000/minio/health/live"]
    interval: 30s
    timeout: 20s
    retries: 3

# starts 4 docker containers running minio server instances.
# using nginx reverse proxy, load balancing, you can access
# it through port 9000.
services:
{% for i in range(1,minio_service_count+1) %}
  minio{{ i }}:
    <<: *minio-common
    hostname: minio{{ i }}
    volumes:
{% for j in range(1,minio_service_volume_count+1) %}
      - data{{ i }}-{{ j }}:/data{{ j }}
{% endfor %}

{% endfor %}
  nginx:
    image: nginx:1.19.2-alpine
    hostname: nginx
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf:ro
    ports:
      - "9000:9000"
      - "9001:9001"
    depends_on:
{% for i in range(1,minio_service_count+1) %}
      - minio{{ i }}
{% endfor %}

## By default this config uses default local driver,
## For custom volumes replace with volume driver configuration.
volumes:
{% for i in range(1,minio_service_count+1) %}
{% for j in range(1,minio_service_volume_count+1) %}
  data{{ i }}-{{ j }}:
{% endfor %}
{% endfor %}

